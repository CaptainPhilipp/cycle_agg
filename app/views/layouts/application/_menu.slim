ul#menu
  li
    li = link_to 'Домой', root_path
  li
    - Category.includes_tree.each do |group|
      li
        = menu_link_for(group)
        ul
          - group.child_sections.each do |section|
            li
              = menu_link_for(section)
              ul
                - section.child_subsections.each do |subsection|
                  li
                    = menu_link_for(subsection)
